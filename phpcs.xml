<?xml version="1.0"?>
<ruleset name="Delegator-Magento1">
    <description>Delegator - Magento Coding Standards</description>

    <!-- Check the files in this directory -->
    <file>.</file>

    <!-- Exclude these directories from linting -->
    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- Show colors in console -->
    <arg value="-colors" />

    <!-- Show warnings, show sniff codes, show progress -->
    <arg value="wsp" />

    <!-- Only lint these specific file extensions -->
    <arg name="extensions" value="php,phtml" />

    <!-- Use MEQP1 as a base -->
    <rule ref="MEQP1">
        <!-- Exclude some rules which are obviously mistakes -->
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace" />
    </rule>
</ruleset>
